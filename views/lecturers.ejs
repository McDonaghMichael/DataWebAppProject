<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturers</title>
    <style>
        table, th, td {
          border:1px solid black;
        }
        </style>
</head>
<body>
    <h1>Lecturers</h1>
    <a href="/">Home</a>

    <table>
        <thead>
            <tr>
                <th>Lecturer ID</th>
                <th>Name</th>
                <th>Department</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% lecturers.forEach(lecturer => { %>
                <tr>
                    <td><%= lecturer._id %></td>
                    <td><%= lecturer.name %></td>
                    <td><%= lecturer.did %></td>
                    <td><a href="/lecturers/delete/<%= lecturer._id %>">Delete</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
