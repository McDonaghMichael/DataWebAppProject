<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grades</title>
    <style>
        table, th, td {
          border:1px solid black;
        }
        </style>
</head>
<body>
    <a class="link" href="/">Home</a>
    <h1>Grades</h1>
    <table>
        <thead>
            <tr>
                <th>Student</th>
                <th>Module</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            <% grades.forEach(grade => { %>
                <tr>
                    <td><%= grade.student_name %></td>
                    <td><%= grade.module_name || 'N/A' %></td>
                    <td><%= grade.student_grade !== null ? grade.student_grade : 'N/A' %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
